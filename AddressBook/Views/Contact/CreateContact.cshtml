@model AddressBook.Models.ContactModel
@{
    ViewBag.Title = "CreateContact";
}

<h2>Create Contact</h2>

<div class="row">

    @using (Html.BeginForm("CreateContact", "Contact", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", @role = "alert" })

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Surname)
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        </div>

        <input type="submit" class="btn btn-primary" value="Create Contact" />
    }
</div>

